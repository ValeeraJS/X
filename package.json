{
	"name": "@valeera/x",
	"version": "1.0.0",
	"description": "ECS framework written in TS for web application.",
	"main": "build/x.js",
	"repository": "ValeeraJS/x",
	"jsnext:main": "build/x.module.js",
	"module": "build/x.module.js",
	"types": "build/index.d.ts",
	"files": [
		"build",
		"LICENSE",
		"package.json",
		"README.md",
		"src"
	],
	"directories": {
		"docs": "docs",
		"examples": "examples",
		"src": "src"
	},
	"scripts": {
		"build": "npm run build:es & npm run build:iife & npm run build:umd",
		"build:es": "rollup -c scripts/rollup.config.mjs",
		"build:iife": "rollup -c scripts/rollup.config.iife.mjs",
		"build:umd": "rollup -c scripts/rollup.config.umd.mjs",
		"start": "npm run dev",
		"lint": "eslint src --ext js --ext ts",
		"test": "nyc --reporter=html --reporter=text mocha -r ts-node/register ./test/*.ts",
		"travis": "npm run lint && npm test"
	},
	"keywords": [
		"x",
		"ecs",
		"module",
		"valeera",
		"framework"
	],
	"author": "hypnosnova",
	"license": "MIT",
	"dependencies": {
		"@valeera/idgenerator": "^1.2.2",
		"@valeera/tree": "0.2.0"
	},
	"devDependencies": {
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@types/chai": "^5.2.2",
		"@types/mocha": "^10.0.10",
		"@typescript-eslint/eslint-plugin": "^8.37.0",
		"@typescript-eslint/parser": "^8.37.0",
		"chai": "^5.2.1",
		"concurrently": "^9.2.0",
		"eslint": "^9.31.0",
		"eslint-config-valeera": "^0.1.4",
		"eslint-plugin-html": "^8.1.3",
		"eslint-plugin-prettier": "^5.5.1",
		"esm": "^3.2.25",
		"http-server": "^14.1.1",
		"mocha": "^11.7.1",
		"nyc": "^17.1.0",
		"prettier": "^3.0.3",
		"rollup": "^4.45.0",
		"rollup-plugin-typescript2": "^0.36.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3"
	},
	"publishConfig": {
		"access": "public"
	},
	"jspm": {
		"files": [
			"package.json",
			"LICENSE",
			"README.md",
			"build/x.js",
			"build/x.min.js",
			"build/x.module.js"
		],
		"directories": {}
	}
}
